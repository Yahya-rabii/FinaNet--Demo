<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
style="@style/linear_layout_3">


    <View
        android:id="@+id/view2"
        style="@style/view2"
        android:layout_below="@+id/image_view_list"
        android:layout_marginTop="38dp" />

    <ImageView
        android:id="@+id/image_view_list"
        style="@style/image_view_list"
        android:layout_width="132dp"
        android:layout_height="120dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="-21dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="-21dp"
        android:layout_marginRight="-21dp"
        android:layout_marginBottom="-21dp"
        android:contentDescription="@string/todo" />

    <TextView
        android:id="@+id/item_name"
        style="@style/item_name"
        android:layout_alignTop="@+id/image_view_list"
        android:layout_marginStart="38dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="-5dp"
        android:layout_toEndOf="@+id/image_view_list"
        android:layout_toRightOf="@+id/image_view_list" />

    <TextView
        android:id="@+id/supplier"
        style="@style/supplier_list"
        android:layout_below="@+id/item_name"
        android:layout_marginStart="38dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/image_view_list"
        android:layout_toRightOf="@+id/image_view_list" />

    <TextView
        android:id="@+id/quantity"
        style="@style/quantity"
        android:layout_below="@+id/supplier"
        android:layout_marginStart="38dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/image_view_list"
        android:layout_toRightOf="@+id/image_view_list" />

    <TextView
        android:id="@+id/price"
        style="@style/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quantity"
        android:layout_marginStart="38dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="7dp"
        android:layout_toEndOf="@+id/image_view_list"
        android:layout_toRightOf="@+id/image_view_list" />


    <TextView
        android:id="@+id/sold"
        style="@style/sold"
        android:layout_below="@+id/price"
        android:layout_alignBottom="@+id/image_view_list"
        android:layout_marginStart="38dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="1dp"
        android:layout_toEndOf="@+id/image_view_list"
        android:layout_toRightOf="@+id/image_view_list" />

    <ImageView
        android:id="@+id/button_sell"
        style="@style/button_sell"
        android:contentDescription="@string/todo" />


</RelativeLayout>


